<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
  <title>Erad.io</title>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />
  <%= stylesheet_link_tag "signupstyle.css" %>
</head>

<body>
	
  <div id="header">
	  <a href="/"><img src="images/logo.png" id="logo"></a>
	  <a href=""><img src="images/tab.png" id="tab"></a>
	  
	  <% unless current_user then %>
	    <a href="login"><p id="signin">Sign in</p></a>
	    <a href="signup"><p id="signups">Sign up</p></a>
	  <% else %>
	    <a href=""><img src="images/tri.png" id="tri"></a>
	    <a href="user/<%=current_user.username%>"><p id="c_user"><%=current_user.username%></p></a>
	  <% end %>
  </div>
  
  <div id="dropmenu">
    <div class="dropdown-content">
      <a href="#" id="top">Help</a>
      <a href="#">Advertising</a>
      <a href="#">Contact us</a>
      <a href="#">Privacy</a>
      <a href="#">Rules</a>
      <a href="settings.html" id="bottom">My clubs</a>
    </div>
  </div>

  <div id="signup">
  <h1>Settings</h1>
      <%= form_for(:user, url: settings_path) do |f| %>
		  <%= f.text_field :background, id: "binput", :placeholder => "Background url" %>
		  <%= f.text_field :fsaasfd, id: "colorq", :placeholder => "Main color" %>
		  <%= f.color_field :main_color, id: "colorp" %>
		  <%= f.text_field :fsaasfd, id: "colorq", :placeholder => "Secondary color" %>
		  <%= f.color_field :snd_color, id: "colorp" %>
		  <%= f.submit "Submit", id: "formsub" %>
      <% end %>
  </div>
  
  <% if current_user then %>
      <style>
		  body{
		      background-image:url('<%=current_user.background%>');
	      }
	      h1{
	          background:<%=current_user.main_color%> !important;
	      }
	      #header{
	          background:<%=current_user.main_color%> !important;
	      }
	      #formsub{
		 	          background:<%=current_user.main_color%> !important;

	      }
      </style>
  <% end %>
  
  
  <%= javascript_include_tag "jquery.js", "index.js", "settings1.js"  %>
  
</body>

</html>
